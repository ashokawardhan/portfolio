{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier",
        "prettier/react",
        "prettier/standard"
    ],
    "plugins": ["react", "prettier"],
    "env": {
        "node": true,
        "browser": true,
        "jasmine": true
    },
    "settings": {
        "import/resolver": {
            "webpack": {
                "config": "./webpack/base.config.js"
            }
        }
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "react/display-name": 0,
        "max-len": 0,
        "react/prop-types": 0,
        "arrow-parens": [2, "always"],
        "no-unused-expressions": 0
    }
}
